    <script type="text/javascript" charset="utf-8">
    if (typeof eaCtrl =="undefined"){ 
        var eaCtrlRecs=[];
        var eaCtrl = {add:function(ag){eaCtrlRecs.push(ag)}};
        var js = document.createElement('script');
        js.setAttribute("src","//go.easrv.cl/loadeactrl.go?pid=152716&spaceid=8182219&ctrlid=798931");
        document.head.appendChild(js);
    }
    eaCtrl.add({"display":"sp_8182219_node","sid":8182219,"plugin":"banner"});
    eaCtrl.add({"display":"sp_8182222_node","sid":8182222,"plugin":"banner"});
    eaCtrl.add({"display":"sp_8182225_node","sid":8182225,"plugin":"banner"});
    </script>
    
    <script>
    // Banner rotatorio
    const bannerImages = [
        '/decorative-images/1115ae7d-909f-4760-a3a1-037a05ad9931.jpg',
        '/decorative-images/1618cbb2-8dd1-4127-99d9-d9f30536de72.jpg',
        '/decorative-images/49830c0a-2fd8-439c-a583-029a0b39c4d6.jpg',
        '/decorative-images/4bfb7a8b-b81e-49d7-a160-90b834d0b751.jpg',
        '/decorative-images/81f55fd4-b0df-49f4-9020-cbb0f5042c08.jpg'
    ];
    
    function initBanner() {
        const bannerBg = document.getElementById('banner-bg');
        let currentIndex = 0;
        
        bannerImages.forEach((src, i) => {
            const img = document.createElement('img');
            img.src = src;
            img.className = i === 0 ? 'active' : '';
            bannerBg.appendChild(img);
        });
        
        setInterval(() => {
            const imgs = bannerBg.querySelectorAll('img');
            imgs[currentIndex].classList.remove('active');
            currentIndex = (currentIndex + 1) % imgs.length;
            imgs[currentIndex].classList.add('active');
        }, 5000);
    }
    
    // Carousel autom√°tico
    let carouselPosition = 0;
    function initCarousel() {
        const carousel = document.getElementById('carousel');
        const images = window.FULL_IMAGES_POOL || [];
        
        if (!images || images.length === 0) {
            setTimeout(initCarousel, 500);
            return;
        }
        
        const carouselImages = [...images.slice(0, 40), ...images.slice(0, 40)];
        
        carouselImages.forEach(img => {
            const div = document.createElement('div');
            div.className = 'carousel-item';
            const imgEl = document.createElement('img');
            imgEl.src = img.startsWith('/') ? img : '/' + img;
            imgEl.loading = 'lazy';
            div.appendChild(imgEl);
            carousel.appendChild(div);
        });
        
        setInterval(() => {
            carouselPosition -= 215;
            if (Math.abs(carouselPosition) >= (215 * 40)) {
                carousel.style.transition = 'none';
                carouselPosition = 0;
                carousel.style.transform = 'translateX(0)';
                setTimeout(() => {
                    carousel.style.transition = 'transform 0.5s ease';
                }, 50);
            } else {
                carousel.style.transform = `translateX(${carouselPosition}px)`;
            }
        }, 2000);
    }
    
    // Gallery
    function initGallery() {
        const gallery = document.getElementById('gallery');
        const images = window.FULL_IMAGES_POOL || [];
        
        if (!images || images.length === 0) {
            setTimeout(initGallery, 500);
            return;
        }
        
        const shuffled = [...images].sort(() => Math.random() - 0.5);
        shuffled.slice(0, 40).forEach(img => {
            const div = document.createElement('div');
            div.className = 'gallery-item';
            const imgEl = document.createElement('img');
            imgEl.src = img.startsWith('/') ? img : '/' + img;
            imgEl.loading = 'lazy';
            div.appendChild(imgEl);
            gallery.appendChild(div);
        });
    }
    
    // Anuncios inferiores (ExoClick)
    function initBottomAds() {
        // Anuncio inferior izquierdo
        const leftAd = document.getElementById('bottom-ad-left');
        if (leftAd) {
            const ins = document.createElement('ins');
            ins.className = 'eas6a97888e2';
            ins.setAttribute('data-zoneid', '5696328');
            ins.style.display = 'block';
            ins.style.width = '100%';
            ins.style.height = '100%';
            leftAd.appendChild(ins);
        }
        
        // Anuncio inferior derecho
        const rightAd = document.getElementById('bottom-ad-right');
        if (rightAd) {
            const ins = document.createElement('ins');
            ins.className = 'eas6a97888e2';
            ins.setAttribute('data-zoneid', '5705186');
            ins.style.display = 'block';
            ins.style.width = '100%';
            ins.style.height = '100%';
            rightAd.appendChild(ins);
        }
        
        // Activar AdProvider para ExoClick
        if (window.AdProvider) {
            window.AdProvider.push({"serve": {}});
        }
    }
    
    // PopAds
    window._pop = window._pop || [];
    window._pop.push(['siteId', 5226758]);
    window._pop.push(['minBid', 0]);
    
    // Inicializar todo
    document.addEventListener('DOMContentLoaded', function() {
        console.log('üå¥ BeachGirl.me - Versi√≥n final');
        initBanner();
        initCarousel();
        initGallery();
        
        // Esperar para cargar anuncios de ExoClick
        setTimeout(initBottomAds, 1500);
    });
    
    // Cargar AdProvider
    const adScript = document.createElement('script');
    adScript.async = true;
    adScript.src = 'https://a.magsrv.com/ad-provider.js';
    document.head.appendChild(adScript);
    
    // PopAds
    setTimeout(() => {
        const pa = document.createElement('script');
        pa.async = true;
        pa.src = '//c1.popads.net/pop.js';
        document.body.appendChild(pa);
    }, 2000);
    </script>
