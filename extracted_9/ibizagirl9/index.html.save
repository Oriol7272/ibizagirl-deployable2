    </div>

    <!-- Main Container -->
    <div class="main-container" style="margin-top: 70px;">
        
        <!-- Left Sidebar - Photos -->
        <div class="sidebar" id="photosSidebar">
            <div class="sidebar-header">
                <div class="sidebar-title">üì∏ Premium Photos</div>
                <div class="sidebar-subtitle">
                    <span id="photoCountSidebar">0</span> exclusive images
                </div>
            </div>
            <div class="thumb-grid" id="photosGrid"></div>
        </div>

        <!-- Center Preview -->
        <div class="preview-area">
            <div class="welcome-screen" id="welcomeScreen">
                <div style="font-size: 4rem; margin-bottom: 1rem;">üëôüå¥‚òÄÔ∏è</div>
                <div style="font-size: 3rem; font-weight: 800; 
                           background: linear-gradient(135deg, #ff006e, #ffd700); 
                           -webkit-background-clip: text; 
                           -webkit-text-fill-color: transparent;">
                    Ibiza Paradise
                </div>
                <div style="font-size: 1.2rem; color: #ccc; margin: 2rem 0;">
                    Exclusive Content ‚Ä¢ VIP Access
                </div>
                <button onclick="showPaymentOptions()" 
                        style="background: linear-gradient(135deg, #ff006e, #ffd700);
                               padding: 1rem 3rem; border: none; border-radius: 50px;
                               color: white; font-size: 1.2rem; font-weight: 600;
                               cursor: pointer;">
                    ‚ú® Enter Paradise ‚ú®
                </button>
            </div>
            
            <div class="preview-container" id="previewContainer" style="display: none;">
                <img id="previewImage" class="preview-media" style="display: none;">
                <video id="previewVideo" class="preview-media" controls style="display: none;"></video>
                
                <div class="preview-lock-overlay" id="lockOverlay">
                    <div style="font-size: 4rem;">üîí</div>
                    <div style="color: white; font-size: 1.8rem; margin: 1rem 0;">Premium Content</div>
                    <div style="color: #ffd700; font-size: 2.5rem; font-weight: bold; margin-bottom: 1.5rem;">
                        ‚Ç¨10/month
                    </div>
                    <button onclick="showPaymentOptions()" 
                            style="background: linear-gradient(135deg, #ff006e, #ffd700);
                                   padding: 1rem 2rem; border: none; border-radius: 50px;
                                   color: white; font-size: 1.1rem; cursor: pointer;">
                        üíé Unlock Now
                    </button>
                </div>
            </div>
        </div>

        <!-- Right Sidebar - Videos -->
        <div class="sidebar right" id="videosSidebar">
            <div class="sidebar-header">
                <div class="sidebar-title">üé¨ Premium Videos</div>
                <div class="sidebar-subtitle">
                    <span id="videoCountSidebar">0</span> exclusive clips
                </div>
            </div>
            <div class="thumb-grid" id="videosGrid"></div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="script.js"></script>
    
    <!-- PayPal Integration with correct implementation -->
    <script>
        // PayPal configuration
        const PAYPAL_CONFIG = {
            CURRENCY: 'EUR',
            PRICES: {
                MONTHLY: 10.00,
                PHOTO: 0.10,
                VIDEO: 0.30
            }
        };
        
        // Show payment options
        function showPaymentOptions() {
            const modal = document.createElement('div');
            modal.id = 'payment-modal';
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0,0,0,0.95);
                display: flex;
                justify-content: center;
                align-items: center;
                z-index: 10000;
                backdrop-filter: blur(10px);
            `;
            
            modal.innerHTML = `
                <div style="background: #1a1a1a; padding: 2rem; border-radius: 20px; 
                            max-width: 500px; width: 90%; border: 2px solid #ff006e; 
                            color: white; text-align: center;">
                    
                    <h2 style="color: #ff006e; margin-bottom: 2rem;">Choose Your Access</h2>
                    
                    <div style="background: rgba(255,0,110,0.1); padding: 1.5rem; 
                                border-radius: 15px; margin-bottom: 1.5rem;">
                        <h3 style="color: #ffd700; margin-bottom: 1rem;">üîì Monthly Subscription</h3>
                        <div style="font-size: 2.5rem; font-weight: bold; color: #ffd700;">
                            ‚Ç¨10/month
                        </div>
                        <p style="margin: 1rem 0; color: #ccc;">
                            ‚úÖ Unlimited access to ALL content<br>
                            ‚úÖ No blur, full HD quality<br>
                            ‚úÖ Cancel anytime
                        </p>
                        <div id="paypal-subscription-container"></div>
                    </div>
                    
                    <div style="color: #888; margin: 1rem 0;">‚Äî OR ‚Äî</div>
                    
                    <div style="background: rgba(255,215,0,0.1); padding: 1rem; 
                                border-radius: 15px; margin-bottom: 1.5rem;">
                        <h3 style="color: #ffd700;">üíé Pay Per View</h3>
                        <p style="color: #ccc;">
                            üì∏ Photos: ‚Ç¨0.10 each<br>
                            üé¨ Videos: ‚Ç¨0.30 each
                        </p>
                    </div>
                    
                    <button onclick="document.getElementById('payment-modal').remove()" 
                            style="background: transparent; border: 1px solid #666; 
                                   color: #888; padding: 0.75rem 2rem; 
                                   border-radius: 25px; cursor: pointer;">
                        Cancel
                    </button>
                </div>
            `;
            
            document.body.appendChild(modal);
            
            // Render PayPal subscription button
            if (window.paypal) {
                paypal.Buttons({
                    createOrder: function(data, actions) {
                        return actions.order.create({
                            purchase_units: [{
                                description: 'IbizaGirl Monthly Subscription',
                                amount: {
                                    currency_code: PAYPAL_CONFIG.CURRENCY,
                                    value: PAYPAL_CONFIG.PRICES.MONTHLY.toFixed(2)
                                }
                            }]
                        });
                    },
                    onApprove: function(data, actions) {
                        return actions.order.capture().then(function(details) {
                            // Payment successful
                            alert('‚úÖ Payment successful! All content is now unlocked!');
                            localStorage.setItem('ibiza_subscription', JSON.stringify({
                                orderId: data.orderID,
                                date: new Date().toISOString()
                            }));
                            unlockAllContent();
                            document.getElementById('payment-modal').remove();
                        });
                    },
                    onError: function(err) {
                        console.error('PayPal Error:', err);
                        alert('Payment failed. Please try again.');
                    }
                }).render('#paypal-subscription-container');
            } else {
                document.getElementById('paypal-subscription-container').innerHTML = 
                    '<p style="color: red;">PayPal not loaded. Check your Client ID.</p>';
            }
        }
        
        // Single content payment
        function showSinglePayment(contentId, contentType, contentTitle) {
            const price = contentType === 'video' ? PAYPAL_CONFIG.PRICES.VIDEO : PAYPAL_CONFIG.PRICES.PHOTO;
            
            const modal = document.createElement('div');
            modal.id = 'ppv-modal';
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0,0,0,0.95);
                display: flex;
                justify-content: center;
                align-items: center;
                z-index: 10000;
            `;
            
            modal.innerHTML = `
                <div style="background: #1a1a1a; padding: 2rem; border-radius: 20px; 
                            max-width: 400px; border: 2px solid #ff006e; color: white; 
                            text-align: center;">
                    
                    <h3 style="color: #ff006e; margin-bottom: 1rem;">
                        Unlock This ${contentType === 'video' ? 'Video' : 'Photo'}
                    </h3>
                    
                    <p style="color: #ccc; margin-bottom: 1.5rem;">"${contentTitle}"</p>
                    
                    <div style="font-size: 2rem; font-weight: bold; color: #ffd700; 
                                margin-bottom: 1.5rem;">
                        ‚Ç¨${price.toFixed(2)}
                    </div>
                    
                    <div id="paypal-ppv-container"></div>
                    
                    <button onclick="document.getElementById('ppv-modal').remove()" 
                            style="background: transparent; border: 1px solid #666; 
                                   color: #888; padding: 0.5rem 1.5rem; 
                                   border-radius: 25px; cursor: pointer; margin-top: 1rem;">
                        Cancel
                    </button>
                </div>
            `;
            
            document.body.appendChild(modal);
            
            // Render PayPal button
            if (window.paypal) {
                paypal.Buttons({
                    createOrder: function(data, actions) {
                        return actions.order.create({
                            purchase_units: [{
                                description: `${contentType} - ${contentTitle}`,
                                amount: {
                                    currency_code: PAYPAL_CONFIG.CURRENCY,
                                    value: price.toFixed(2)
                                }
                            }]
                        });
                    },
                    onApprove: function(data, actions) {
                        return actions.order.capture().then(function(details) {
                            alert(`‚úÖ ${contentType} unlocked!`);
                            unlockSingleContent(contentId);
                            document.getElementById('ppv-modal').remove();
                        });
                    }
                }).render('#paypal-ppv-container');
            }
        }
        
        // Unlock functions
        function unlockAllContent() {
            document.querySelectorAll('.thumb-media').forEach(media => {
                media.style.filter = 'none';
            });
            document.querySelectorAll('.lock-icon').forEach(icon => {
                icon.style.display = 'none';
            });
            const unlockBtn = document.getElementById('unlockBtn');
            if (unlockBtn) {
                unlockBtn.innerHTML = '‚úÖ VIP Active';
                unlockBtn.style.background = 'linear-gradient(135deg, #00c851, #00ff88)';
            }
        }
        
        function unlockSingleContent(contentId) {
            const item = document.querySelector(`[data-id="${contentId}"]`);
            if (item) {
                item.querySelector('.thumb-media').style.filter = 'none';
                const lock = item.querySelector('.lock-icon');
                if (lock) lock.style.display = 'none';
            }
        }
        
        // Override unlock button
        document.addEventListener('DOMContentLoaded', () => {
            const unlockBtn = document.getElementById('unlockBtn');
            if (unlockBtn) {
                unlockBtn.onclick = showPaymentOptions;
            }
            
            // Check if PayPal loaded
            setTimeout(() => {
                if (!window.paypal) {
                    console.error('PayPal SDK not loaded. Check your Client ID in the script tag.');
                } else {
                    console.log('‚úÖ PayPal SDK loaded successfully');
                }
            }, 2000);
        });
    </script>
    
    <!-- Dynamic background system -->
    <script>
        // Use random images from gallery as backgrounds
        async function setupDynamicBackgrounds() {
            try {
                const response = await fetch('gallery.json');
                const data = await response.json();
                
                // Get image URLs from full folder
                const images = data
                    .filter(item => item.type === 'image' && item.full)
                    .map(item => item.full);
                
                if (images.length > 0) {
                    // Set random background
                    const randomBg = images[Math.floor(Math.random() * images.length)];
                    const bgElement = document.getElementById('dynamicBackground');
                    if (bgElement) {
                        bgElement.style.backgroundImage = `url('${randomBg}')`;
                    }
                    
                    // Change background every 30 seconds
                    setInterval(() => {
                        const newBg = images[Math.floor(Math.random() * images.length)];
                        bgElement.style.backgroundImage = `url('${newBg}')`;
                    }, 30000);
                }
            } catch (error) {
                console.log('Could not load dynamic backgrounds');
            }
        }
        
        // Initialize backgrounds after DOM loads
        document.addEventListener('DOMContentLoaded', setupDynamicBackgrounds);
    </script>
</body>
</html>
