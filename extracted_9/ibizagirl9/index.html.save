            cursor: pointer;
            position: relative;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            background: linear-gradient(135deg, #1a1a1a, #2a2a2a);
            border: 2px solid transparent;
        }
        
        .thumb-item:hover {
            transform: scale(1.08) translateY(-5px);
            border-color: #ff006e;
            box-shadow: 0 15px 40px rgba(255, 0, 110, 0.4);
            z-index: 10;
        }
        
        .thumb-media {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: blur(20px) brightness(0.6);
            transition: all 0.5s ease;
        }
        
        .thumb-item:hover .thumb-media {
            filter: blur(12px) brightness(0.7);
            transform: scale(1.1);
        }
        
        .preview-area {
            background: radial-gradient(circle at center, rgba(255,0,110,0.05) 0%, transparent 50%);
            position: relative;
            overflow: hidden;
        }
        
        /* PayPal button container styles */
        #paypal-button-container,
        #paypal-subscription-button,
        #paypal-ppv-button {
            min-height: 50px;
            margin: 1rem 0;
        }
    </style>
</head>
<body>
    <!-- Background decoration layer -->
    <div class="background-main" id="dynamicBackground"></div>
    
    <!-- Loading Screen -->
    <div class="loading-screen" id="loadingScreen">
