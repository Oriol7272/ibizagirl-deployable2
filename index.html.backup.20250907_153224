   <script>
       // Usar imágenes decorativas EXISTENTES para el banner
       function loadBannerImages() {
           const bannerBg = document.getElementById('bannerBg');
           const decorImages = window.DECOR_IMAGES || [];
           
           const bannerImages = decorImages.filter(img => img.includes('.jpg'));
           
           if (bannerImages.length > 0) {
               bannerImages.slice(0, 3).forEach(src => {
                   const img = document.createElement('img');
                   img.src = src;
                   bannerBg.appendChild(img);
               });
           }
       }
       
       // Obtener 40 imágenes aleatorias del pool EXISTENTE
       function getRandomImages(count) {
           const pool = window.FULL_IMAGES_POOL || [];
           if (pool.length === 0) return [];
           
           const shuffled = [...pool].sort(() => 0.5 - Math.random());
           return shuffled.slice(0, Math.min(count, shuffled.length));
       }
       
       // Cargar carousel con 40 imágenes
       function loadCarousel() {
           const carousel = document.getElementById('carousel');
           const images = getRandomImages(40);
           
           images.forEach(imgPath => {
               const item = document.createElement('div');
               item.className = 'carousel-item';
               item.innerHTML = `<img src="/${imgPath}" alt="Beach photo" loading="lazy">`;
               carousel.appendChild(item);
           });
       }
       
       // Cargar gallery con 40 imágenes diferentes
       function loadGallery() {
           const gallery = document.getElementById('gallery');
           const images = getRandomImages(40);
           
           images.forEach(imgPath => {
               const item = document.createElement('div');
               item.className = 'gallery-item';
               item.innerHTML = `<img src="/${imgPath}" alt="Beach photo" loading="lazy">`;
               gallery.appendChild(item);
           });
       }
       
       // Inicializar cuando cargue la página
       window.addEventListener('DOMContentLoaded', function() {
           setTimeout(function() {
               loadBannerImages();
               loadCarousel();
               loadGallery();
           }, 100);
       });
   </script>
