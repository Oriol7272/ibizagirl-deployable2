    <!-- Main application script -->
    <script>
        // Función principal para inicializar la página
        document.addEventListener('DOMContentLoaded', function() {
            initializeBeachGirl();
        });

        function initializeBeachGirl() {
            console.log('🏖️ Inicializando BeachGirl.pics...');
            
            // Configurar las imágenes rotatorias del banner desde decorative-images
            setupBannerRotator();
            
            // Inicializar carrusel con 40 imágenes aleatorias de full/
            initializeCarousel();
            
            // Inicializar galería con 40 imágenes aleatorias de full/
            initializeGallery();
            
            // Configurar selector de idiomas
            setupLanguageSelector();
            
            console.log('✅ BeachGirl.pics inicializado correctamente');
        }

        function setupBannerRotator() {
            const rotator = document.getElementById('banner-rotator');
            if (!rotator) return;

            // Usar imágenes de decorative-images para el banner
            const bannerImages = window.DECOR_IMAGES || [];
            const validBannerImages = bannerImages.filter(img => 
                img.includes('.jpg') || img.includes('.png') || img.includes('.webp')
            );

            if (validBannerImages.length === 0) return;

            let currentIndex = 0;
            
            function showImage(index) {
                const img = validBannerImages[index];
                if (img) {
                    rotator.style.backgroundImage = `url(${img})`;
                }
            }

            function nextImage() {
                currentIndex = (currentIndex + 1) % validBannerImages.length;
                showImage(currentIndex);
            }

            // Mostrar primera imagen
            showImage(0);
            
            // Rotar cada 4 segundos
            setInterval(nextImage, 4000);
        }

        function initializeCarousel() {
            const carousel = document.getElementById('main-carousel');
            if (!carousel) return;

            // Obtener 40 imágenes aleatorias de la carpeta full desde content-data2.js
            const fullImages = window.FULL_IMAGES_POOL || [];
            const shuffledImages = shuffleArray([...fullImages]);
            const carouselImages = shuffledImages.slice(0, 40);

            // Limpiar carrusel
            carousel.innerHTML = '';

            // Crear elementos del carrusel
            carouselImages.forEach((imageName, index) => {
                const item = document.createElement('div');
                item.className = 'carousel-item';
                item.innerHTML = `
                    <img src="/${imageName}" alt="Beach photo ${index + 1}" loading="lazy">
                `;
                carousel.appendChild(item);
            });

            // Configurar navegación del carrusel
            setupCarouselNavigation();
        }

        function initializeGallery() {
            const gallery = document.getElementById('main-gallery');
            if (!gallery) return;

            // Obtener 40 imágenes aleatorias diferentes al carrusel de full/
            const fullImages = window.FULL_IMAGES_POOL || [];
            const shuffledImages = shuffleArray([...fullImages]);
            const galleryImages = shuffledImages.slice(40, 80); // Diferentes al carrusel

            // Limpiar galería
            gallery.innerHTML = '';

            // Crear elementos de la galería
            galleryImages.forEach((imageName, index) => {
                const item = document.createElement('div');
                item.className = 'gallery-item';
                item.innerHTML = `
                    <img src="/${imageName}" alt="Beach photo ${index + 1}" loading="lazy">
                    <div class="gallery-overlay">
                        <button class="view-btn">Ver</button>
                    </div>
                `;
                gallery.appendChild(item);
            });
        }

        function setupCarouselNavigation() {
            const prevBtn = document.getElementById('carousel-prev');
            const nextBtn = document.getElementById('carousel-next');
            const carousel = document.getElementById('main-carousel');
            
            if (!prevBtn || !nextBtn || !carousel) return;

            let currentSlide = 0;
            const itemsPerView = 4;
            const totalItems = carousel.children.length;
            const maxSlide = Math.max(0, totalItems - itemsPerView);

            function updateCarousel() {
                const offset = -currentSlide * (100 / itemsPerView);
                carousel.style.transform = `translateX(${offset}%)`;
            }

            prevBtn.addEventListener('click', () => {
                currentSlide = Math.max(0, currentSlide - 1);
                updateCarousel();
            });

            nextBtn.addEventListener('click', () => {
                currentSlide = Math.min(maxSlide, currentSlide + 1);
                updateCarousel();
            });
        }

        function setupLanguageSelector() {
            const select = document.getElementById('language-select');
            if (!select) return;

            select.addEventListener('change', function() {
                const lang = this.value;
                console.log('Cambio de idioma a:', lang);
                // Aquí se implementaría el cambio de idioma
            });
        }

        function shuffleArray(array) {
            const newArray = [...array];
            for (let i = newArray.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [newArray[i], newArray[j]] = [newArray[j], newArray[i]];
            }
            return newArray;
        }
    </script>
