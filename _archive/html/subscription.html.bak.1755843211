  <link rel="stylesheet" href="/css/blur.css">
  <meta name="description" content="Activa tu suscripción a IbizaGirl.pics">

  <script>
    window.PAYPAL_CLIENT_ID = "";
    fetch('/api/config').then(r=>r.json()).then(j=>{
      if (j && j.paypalClientId) window.PAYPAL_CLIENT_ID = j.paypalClientId;
    });
    window.CRISP_WEBSITE_ID = "TU_CRISP_WEBSITE_ID";
  </script>
  <script src="/js/chatbot.js" defer></script>
