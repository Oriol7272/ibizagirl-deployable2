<body>
  <header style="padding:16px 12px;">
    <h1 style="margin:0;">Suscripciones</h1>
    <p style="opacity:.8;margin:.25rem 0 0">Elige un plan y desbloquea todo el contenido</p>
  </header>

  <main style="padding:12px; max-width:1000px; margin:0 auto;">
    <section style="margin: 14px 0;">
      <script async type="application/javascript" src="https://a.magsrv.com/ad-provider.js"></script>
      <ins class="eas6a97888e2" data-zoneid="5696328"></ins>
      <script>(AdProvider = window.AdProvider || []).push({"serve": {}});</script>
    </section>

    <section style="display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:12px;margin:18px 0;">
      <div class="card" style="padding:16px;background:#0b0b0b;color:#fff;">
        <h3 style="margin-top:0">Mensual</h3>
        <div id="pp-sub-monthly"></div>
      </div>
      <div class="card" style="padding:16px;background:#0b0b0b;color:#fff;">
        <h3 style="margin-top:0">Anual</h3>
        <div id="pp-sub-annual"></div>
      </div>
      <div class="card" style="padding:16px;background:#0b0b0b;color:#fff;">
        <h3 style="margin-top:0">Lifetime</h3>
        <div id="pp-sub-lifetime"></div>
      </div>
    </section>
  </main>

  <script src="/js/payments.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      window.renderSubscriptionButtons({
        monthlyPlanId:  "PLAN_ID_MENSUAL",
        annualPlanId:   "PLAN_ID_ANUAL",
        lifetimePlanId: "PLAN_ID_LIFETIME"
      });
    });
  </script>

  <svg width="0" height="0" style="position:absolute">
